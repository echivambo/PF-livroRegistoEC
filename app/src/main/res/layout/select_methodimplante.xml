<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Implante:"
        android:textSize="19dp" />

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/novaContinuadora"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rInicioMetodoImplante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Iniciou este Método " />
        <!--android:onClick="onRadioButtonClicked"/> -->

        <RadioButton
            android:id="@+id/rContinuaMetodoImplante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Continua o Método"/>
        <!-- android:onClick="onRadioButtonClicked"/> -->

    </RadioGroup>

    <EditText
        android:id="@+id/eImplantInserido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textColor="#000000"
        android:layout_marginBottom="20dp"
        android:background="@drawable/xml_editext"
        android:textSize="17dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Deixou de fazer este Método:"
        android:textSize="17dp" />

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rDeixouDeFazerInjectavelSim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sim " />
        <!--android:onClick="onRadioButtonClicked"/> -->

        <RadioButton
            android:id="@+id/rDeixouDeFazerInjectavelNao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Não"/>
        <!-- android:onClick="onRadioButtonClicked"/> -->


    </RadioGroup>


    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/sMetodoAnteriorImplante"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:drawable/btn_dropdown"
        android:text="Método Anterior"
        android:spinnerMode="dropdown"/>

</LinearLayout>