<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Outro método:"
        android:textSize="19dp" />


    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rgEstadoOutroMetodo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/inicioMetodoPilula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Incio este Método " />
        <!--android:onClick="onRadioButtonClicked"/> -->

        <RadioButton
            android:id="@+id/continuaMetodoPilula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Continua o Método"/>
        <!-- android:onClick="onRadioButtonClicked"/> -->


    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Outros Métodos (indique quais):"
        android:layout_marginBottom="20dp"
        android:textSize="19dp" />

    <EditText
        android:id="@+id/etNomedoMetodo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:hint="Nome do método "
        android:textColor="#000000"
        android:layout_marginBottom="20dp"
        android:background="@drawable/xml_editext"
        android:textSize="17dp"/>


    <EditText
        android:id="@+id/etdosesDistribuidas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Total distribuido"
        android:inputType="number"
        android:maxLines="1"
        android:textColor="#000000"
        android:layout_marginBottom="20dp"
        android:background="@drawable/xml_editext"
        android:textSize="17dp"/>

</LinearLayout>