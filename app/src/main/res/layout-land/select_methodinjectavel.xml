<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/tvMetodoINJ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Injectável:"
        android:textSize="19dp" />

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rgNovaContinuadora"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/inicioMetodoInjectavel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Iniciou este Método " />
        <!--android:onClick="onRadioButtonClicked"/> -->

        <RadioButton
            android:id="@+id/continuaMetodoInjectavel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Continua o Método"/>
        <!-- android:onClick="onRadioButtonClicked"/> -->

    </RadioGroup>

</LinearLayout>