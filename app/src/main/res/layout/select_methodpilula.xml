<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/tvNomeMetodo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Pílula:"
        android:textSize="19dp" />


    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rgEstadoUtentePilula"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/inicioMetodoPilula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Incio este Método " />
        <!--android:onClick="onRadioButtonClicked"/> -->

        <RadioButton
            android:id="@+id/continuaMetodoPilula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Continua o Método"/>
        <!-- android:onClick="onRadioButtonClicked"/> -->


    </RadioGroup>

    <TextView
        android:id="@+id/tvTipoMetodo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:text="Tipo de "
        android:textSize="17dp" />





    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rgTipoPilula"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rbMetodo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Microlut" />
        <!--android:onClick="onRadioButtonClicked"/> -->

        <RadioButton
            android:id="@+id/rbMetodo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Microgynon"/>
        <!-- android:onClick="onRadioButtonClicked"/> -->

        <RadioButton
            android:id="@+id/rOutraPilula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Outro"/>
        <!-- android:onClick="onRadioButtonClicked"/> -->


    </RadioGroup>


    <EditText
        android:id="@+id/etOutraPilulaNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:hint="Nome..."
        android:maxLines="1"
        android:textColor="#000000"
        android:layout_marginBottom="20dp"
        android:background="@drawable/xml_editext"
        android:textSize="17dp"/>



    <EditText
            android:id="@+id/etCiclosDistribuidos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="№ de ciclos"
            android:inputType="number"
            android:maxLines="1"
            android:textColor="#000000"
            android:layout_marginBottom="20dp"
            android:background="@drawable/xml_editext"
            android:textSize="17dp"/>

</LinearLayout>