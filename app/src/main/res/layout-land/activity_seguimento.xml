<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C6E0E4"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:paddingBottom="20dp"

    tools:context=".SeguimentoActivity">
    <!--  android:paddingRight="20dp" -->
    <!-- android:paddingLeft="20dp" -->


    <include
        layout="@layout/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        <android.support.v7.widget.CardView
            android:id="@+id/idCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardBackgroundColor="#2caa86"
            app:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="24dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:paddingTop="24dp">

                <TextView
                    android:id="@+id/tvJaFez"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5"
                    android:text="Já fez uma consulta de Planeamento Familiar:"
                    android:textColor="#fff"
                    android:textSize="20dp" />


                <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/rgYN"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tvJaFez"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/rFezConsulta"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:buttonTint="#FFF"


                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="5"
                        android:text="Sim"
                        android:textColor="#fff" />
                    <!-- android:onClick="onRadioButtonClicked"/> -->

                    <RadioButton
                        android:id="@+id/rNaoFezConsulta"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:buttonTint="#FFF"

                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="5"
                        android:text="Não"
                        android:textColor="#fff" />
                    <!--   android:onClick="onRadioButtonClicked"/> -->

                </RadioGroup>

                <TextView
                    android:id="@+id/tvNome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/rgYN"
                    android:layout_marginTop="5dp"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5"
                    android:text="Nome:"
                    android:textColor="#fff"
                    android:textSize="20dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView
                        android:id="@+id/acNome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/xml_editext"
                        android:maxLines="1"
                        android:textColor="#000000" />

                    <Button
                        android:id="@+id/btnSearsh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/acNome"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="10dp"
                        android:text="Search" />
                </RelativeLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fbNewSession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="18dp"
            android:src="@drawable/baseline_add_white_36" />
    </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/my_recycler_view"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/idCardView" />


</LinearLayout>